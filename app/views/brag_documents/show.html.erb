<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold mb-4">My Brag Document</h1>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
    <% @completed_quests.each do |quest| %>
      <div class="bg-white rounded-lg shadow-md p-6">
        <h2 class="text-xl font-bold mb-2"><%= quest.title %></h2>
        <p class="text-gray-700"><%= quest.description %></p>
        <p class="text-sm text-gray-500 mt-4">Completed on: <%= quest.updated_at.to_date %></p>
      </div>
    <% end %>
  </div>

  <%= link_to "Back to Quests", quests_path, class: "mt-8 inline-block bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
</div>
