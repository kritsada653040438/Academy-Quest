<%= turbo_frame_tag dom_id(quest) do %>
  <div class="flex flex-col sm:flex-row items-start sm:items-center justify-between bg-white rounded-2xl p-6 sm:p-8 lg:p-6 shadow-lg mb-6 hover:shadow-xl transition-all duration-300 border-l-8 <%= quest.status? ? 'border-green-400' : 'border-blue-400' %>">

    <div class="flex items-start sm:items-center space-x-6 w-full sm:w-auto mb-6 sm:mb-0">
      <!-- Enhanced Checkbox - Extra Large -->
      <%= form_with url: quest_path(quest), method: :patch, data: { turbo_frame: dom_id(quest) } do %>
        <%= hidden_field_tag "status", "0" %>
        <%= check_box_tag "status", "1", quest.status, 
            onchange: "this.form.submit();", 
            class: "w-8 h-8 sm:w-10 sm:h-10 lg:w-6 lg:h-6 rounded-xl text-blue-500 focus:ring-blue-500 focus:ring-4 transition-all duration-300 mt-2 sm:mt-0 flex-shrink-0 cursor-pointer" %>
      <% end %>

      <div class="flex-1 min-w-0">
        <!-- Quest Title - Much Larger -->
        <div class="flex items-start justify-between w-full">
          <p class="quest-title font-bold text-2xl sm:text-3xl lg:text-2xl leading-relaxed transition-all duration-300 <%= 'line-through text-gray-500' if quest.status? %> pr-4">
            <%= quest.title %>
          </p>
          
          <!-- Mobile Delete Button - Extra Large -->
          <div class="sm:hidden flex-shrink-0">
            <%= button_to quest_path(quest),
                            method: :delete,
                            data: { turbo_confirm: "Are you sure you want to delete this quest?" },
                            class: "text-gray-400 hover:text-red-500 active:text-red-600 transition-colors duration-200 p-3 -mr-2 -mt-1 rounded-xl hover:bg-red-50" do %>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
              </svg>
            <% end %>
          </div>
        </div>

        <!-- Quest Status & Date - Larger -->
        <% if quest.status? %>
          <div class="flex flex-col sm:flex-row sm:items-center mt-4 space-y-2 sm:space-y-0 sm:space-x-3">
            <span class="inline-flex items-center px-4 py-2 rounded-full text-lg sm:text-xl lg:text-sm font-bold bg-green-100 text-green-800 w-fit">
              <svg class="w-6 h-6 sm:w-7 sm:h-7 lg:w-4 lg:h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
              </svg>
              Completed
            </span>
            <span class="text-lg sm:text-xl lg:text-sm text-gray-600 font-medium">
              on <%= quest.updated_at.strftime("%d %b %Y") %>
            </span>
          </div>
        <% else %>
          <div class="flex items-center mt-4">
            <span class="inline-flex items-center px-4 py-2 rounded-full text-lg sm:text-xl lg:text-sm font-bold bg-orange-100 text-orange-800 w-fit">
              <svg class="w-6 h-6 sm:w-7 sm:h-7 lg:w-4 lg:h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              In Progress
            </span>
          </div>
        <% end %>

        <!-- Quest Description - Larger -->
        <% if quest.respond_to?(:description) && quest.description.present? %>
          <p class="text-xl sm:text-2xl lg:text-base text-gray-600 mt-4 leading-relaxed font-medium">
            <%= truncate(quest.description, length: 120) %>
          </p>
        <% end %>
      </div>
    </div>

    <!-- Desktop Delete Button -->
    <div class="hidden sm:flex items-center space-x-2 flex-shrink-0 ml-6">
      <%= button_to quest_path(quest),
                      method: :delete,
                      data: { turbo_confirm: "Are you sure you want to delete this quest?" },
                      class: "text-gray-400 hover:text-red-500 hover:bg-red-50 active:text-red-600 transition-all duration-200 p-3 rounded-xl group" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 sm:h-8 sm:w-8 lg:h-6 lg:w-6 group-hover:scale-110 transition-transform duration-200" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
        </svg>
      <% end %>
    </div>

  </div>
<% end %>

<!-- Enhanced styles for larger mobile experience -->
<style>
  @media (max-width: 640px) {
    .quest-title {
      word-break: break-word;
      hyphens: auto;
      line-height: 1.3;
    }
  }
  
  @media (min-width: 641px) and (max-width: 1024px) {
    .quest-title {
      word-break: break-word;
      hyphens: auto;
      line-height: 1.2;
    }
  }
  
  /* Enhanced checkbox animation */
  input[type="checkbox"] {
    transition: all 0.3s ease;
    cursor: pointer;
  }
  
  input[type="checkbox"]:checked {
    transform: scale(1.15);
  }
  
  input[type="checkbox"]:active {
    transform: scale(0.95);
  }
  
  /* Enhanced focus states for touch devices */
  @media (max-width: 1024px) {
    input[type="checkbox"]:focus {
      ring-width: 4px;
      ring-offset-width: 2px;
    }
    
    button:focus {
      ring-width: 3px;
      ring-color: rgb(59 130 246 / 0.5);
      ring-offset-width: 2px;
    }
    
    /* Better touch targets */
    button {
      min-width: 44px;
      min-height: 44px;
    }
  }
  
  /* Smooth hover effects */
  .transition-all {
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }
</style>