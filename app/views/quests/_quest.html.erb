<%= turbo_frame_tag dom_id(quest) do %>
  <div class="flex items-center justify-between bg-white rounded-lg p-4 shadow-sm mb-3 hover:shadow-md transition-shadow duration-200">

    <div class="flex items-center space-x-4">
      <!-- Simple Checkbox -->
      <%= form_with url: quest_path(quest), method: :patch, data: { turbo_frame: dom_id(quest) } do %>
        <%= hidden_field_tag "status", "0" %>
        <%= check_box_tag "status", "1", quest.status, 
            onchange: "this.form.submit();", 
            class: "w-5 h-5 rounded text-blue-500 focus:ring-blue-500 transition-colors duration-200" %>
      <% end %>

      <div>
        <p class="quest-title font-semibold transition-all duration-300 <%= 'line-through text-gray-500' if quest.status? %>">
          <%= quest.title %>
        </p>
        <% if quest.status? %>
          <p class="text-sm text-green-600">âœ… Completed on <%= quest.updated_at.strftime("%d %b %Y") %></p>
        <% end %>
      </div>
    </div>

    <div class="flex items-center space-x-2">
      <!-- Delete Button -->
      <%= button_to quest_path(quest),
                      method: :delete,
                      data: { turbo_confirm: "Are you sure?" },
                      class: "text-gray-400 hover:text-red-500 transition-colors duration-200 p-1" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
        </svg>
      <% end %>
    </div>

  </div>
<% end %>